{% extends 'base.html.twig' %}

{% block title %}Skills index{% endblock %}

{% block body %}
    <div class="margin">
        <h1>skills index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>icon</th>
                </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.name }}</td>
                    <td>{{ skill.icon }}</td>
                    <td>
                        <a href="{{ path('skills_show', {'id': skill.id}) }}">show</a>
                        <a href="{{ path('skills_edit', {'id': skill.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('skills_new') }}">Create new</a>
    </div>

	{% endblock %}
