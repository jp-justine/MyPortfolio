{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <main class="main">
        <h1 class="registration-title">Connexion</h1>
        <div class="form-container">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <div>
                    <label for="username">Email</label>
                    <input class="input" placeholder="Email" type="text" id="username" name="_username" value="{{ last_username }}"/>
                </div>
                <div>
                    <label for="password">Mot de passe</label>
                    <input class="input" placeholder="Mot de passe" type="password" id="password" name="_password"/>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}
                <input type="hidden" name="_target_path" value="/"/>
                <button class="login-submit" type="submit">Se connecter</button>
            </form>
        </div>
        <p class="register-text">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Enregistrez-vous</a></p>
        <div>
                <a href="{{ path('logout') }}">Se d√©connecter</a>
        </div>
    </main>
{% endblock %}